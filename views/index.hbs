<div class="container bordered margined">

    <div class="section">
        <h1>Skribb.lio</h1>
        <h5>La même chose mais en moins bien</h5>
    </div>

        <div class="row">

            <div class="col s6 m4 l2 offset-s3 offset-m4 offset-l5 input-field">
                <b>Entrez votre pseudo</b>
                <input class="center-align" id="input_username" type="text" required>
            </div>

            <div class="col s12 center-align input-field">
                <a class="button_form waves-effect waves-light btn-large grey darken-1" id="button_create_game">Créer une partie</a>
            </div>

            <div class="col s8 l6 offset-s2 offset-l3 input-field">
                <a class="button_form waves-effect waves-light btn-large grey darken-3" id="button_join_game">Rejoindre une partie</a>
                <div class="container margined" style="display: none;">
                    <b>Identifiant de la partie</b>
                    <input type="text" class="center-align" id="input_game_id" placeholder="36 caractères" minlength="36" maxlength="36">
                </div>
            </div>
        </div>

    </div>

</div>