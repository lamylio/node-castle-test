
<p class="flow-text">{{id}}</p>
<h5>
    <ul class="hint">
        <!-- <li class="letter">_</li> -->
    </ul>
</h5>

<div id="pick" class="modal">
    <div class="modal-content">
        <h4 class="header text-center">Sélectionnez un mot à dessiner</h4>
        <small class="text-center">(Vous avez 8 secondes pour choisir)</small>
        <ul class="words">
            <!-- <li class="word collection-item"></li> -->

        </ul>
    </div>
</div>

<div class="grid-game">

    <div class="userzone card-panel" invisible>
        <h3 class="text-center">Joueurs</h3>
        <ul class="userbox card">
            {{#with channel.users as |users|}}
                {{#each users}}
                    <li class="user card" username={{this.username}}>{{this.username}} <i class="skicon-user-circle"></i></li>
                {{/each}}
            {{/with}}
        </ul>
    </div>

    <div class="settings card-panel">
        <h3 class="text-center">Paramètres</h3>

        <h6>Nombre de rounds</h6>
        <div class="section setting">
            <button onclick="let bu = this.nextElementSibling; bu.stepDown(); changeSetting(bu);" disabled></button>
            <input type="number" name="rounds" id="input_setting_rounds" min="1" max="5" step="1" value="3" disabled>
            <button onclick="let bu = this.previousElementSibling; bu.stepUp();  changeSetting(bu);" disabled></button>
        </div>
            
        <h6>Durée d'un round</h6>
        <div class="section setting">
            <button onclick="let bu = this.nextElementSibling; bu.stepDown();  changeSetting(bu);" disabled></button>
            <input type="number" name="duration" id="input_setting_round_duration" min="30" max="180" value="90" step="10" disabled>
            <button onclick="let bu = this.previousElementSibling; bu.stepUp();  changeSetting(bu);" disabled></button>
        </div>

        <div class="section">
            <button class="waves-effect waves-light btn-large grey darken-3" id="button_start_game" disabled>Démarrer</button>
        </div>
    </div>

    <div class="chatzone card-panel">
        <h3 class="chat-title text-center"><i class="skicon-chat"></i> Chat</h3>
        <ul class="chatbox card"></ul>
        <div class="chat-input card">
            <input id="input_message" type="text" placeholder="Votre message ici..">
            <label for="input_message">Appuyez sur enter pour envoyer</label>
        </div>
    </div>

    <div class="drawzone card" invisible>
        <canvas class="drawbox" disabled></canvas>
    </div>

    <div class="palette card-panel" invisible>
        <div class="card">
            <input type="range" id="input_pen_size" min="1" max="20" step="1" value="3">
            <label for="input_pen_size">Taille du pinceau</label>
        </div>
        <div class="colorzone card">
            <ul class="colors">
                <li class="color" color="#FFFFFF" style="background: white"></li>
                <li class="color" color="#808080" style="background: grey"></li>
                <li class="color" color="#000000" style="background: black"></li>
            </ul>
        </div>
        <div class="tools card">
            <ul>
                <li class="tool" tool="PEN"><i class="skicon-brush"></i></li> {{!-- create edit --}}
                <li class="tool" tool="ERASER" style="opacity: 0.5"><i class="skicon-eraser"></i></li>
                <li class="tool" tool="BUCKET" style="opacity: 0.5"><i class="skicon-bucket"></i></li> {{!-- format_paint --}}
                {{!-- delete_forever --}}
            </ul>
        </div>
    </div>

</div>


