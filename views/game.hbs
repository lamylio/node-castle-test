
<h3>GAME</h3>
<p class="flow-text">{{id}}</p>


<div class="grid-game">

    <div class="userzone">
        <h3 class="text-center">Joueurs</h3>
        <ul>
            <li>[WIP]</li>
        </ul>
    </div>

    <div class="chatzone">
        <h3 class="text-center">Chat</h3>
        <div class="divider spacing"></div>
        <ul class="chatbox"></ul>
    </div>

    <div class="drawzone">
        <canvas class="drawbox"></canvas>
    </div>

    <div class="chat-input">
        <input id="input_message" type="text" placeholder="Votre message ici..">
        <label for="input_message">Vous pouvez utiliser les balises &lt;i&gt; &lt;b&gt; &lt;u&gt;</label>
    </div>

    <div class="palette">
        <div class="colorzone">
            <ul class="colors">
                <li class="color" color="#FFFFFF" style="background: white"></li>
                <li class="color" color="#808080" style="background: grey"></li>
                <li class="color" color="#000000" style="background: black"></li>
            </ul>
        </div>
    </div>

</div>


